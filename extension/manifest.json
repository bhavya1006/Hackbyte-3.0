{
  "manifest_version": 3,
  "name": "Query Runner Extension",
  "version": "1.0",
  "permissions": ["scripting", "tabs", "activeTab", "windows"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["libs/html2canvas.min.js", "user-manual.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
